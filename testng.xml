<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="6" verbose="1">

    <listeners>
        <listener class-name="com.trendyol.utils.listeners.TestListener"/>
        <listener class-name="com.trendyol.utils.listeners.AnnotationTransformer"/>
    </listeners>

    <test name="LoginTestInChrome">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="successLoginCase"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LoginTestInFirefox">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="invalidLoginCase"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LoginTestInChr">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="checkErrorMessageForWrongEmail"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LoginTestInChre">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="checkErrorMessageForWrongPassword"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LoginTestInCh">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="checkErrorMessageForEmptyEmail"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="LoginTestInCrm">
        <parameter name="browser" value="Chrome"></parameter>
        <classes>
            <class name="com.trendyol.tests.LoginCasesTest">
                <methods>
                    <include name="checkErrorMessageForEmptyPassword"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>